# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_COLLECTION=researchmetadatascopuses

# OpenSearch
OPENSEARCH_HOSTS=https://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD="very_secure_password"
OPENSEARCH_INDEX=research_documents
OPENSEARCH_VERIFY_CERTS=false

# Embedding Service
EMBEDDING_SERVICE_URL=http://localhost:8001
EMBEDDING_TIMEOUT=30

# Batch Configuration
MONGO_BATCH_SIZE=100
EMBED_BATCH_SIZE=32
OPENSEARCH_BULK_SIZE=100

# Worker Configuration (parallel embedding fetchers)
NUM_WORKERS=4

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5
